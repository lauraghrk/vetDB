<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>vetDB</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="text-center">Vet DB</h1>

    <a href="/register" class="btn btn-primary btn-lg mt-5 mb-5">Register New Pet</a>

    <h2>All registers:</h2>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Pet name</th>
            <th>Species</th>
            <th>Breed</th>
            <th>Color</th>
            <th>Birth date</th>
            <th>Owner name</th>
            <th>Phone number</th>
            <th>Email</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% list.forEach(pet => { %>
            <tr>
              <td><a href="/<%= pet._id %>">Edit/Delete</a></td>
              <td><%= pet.petName %></td>
              <td><%= pet.species %></td>
              <td><%= pet.breed %></td>
              <td><%= pet.color %></td>
              <td><%= pet.birth.split('-').reverse().join('/') %></td>
              <td><%= pet.ownerName %></td>
              <td><%= pet.phone %></td>
              <td><%= pet.email %></td>
              <td><%= pet.address %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

  </body>
</html>
