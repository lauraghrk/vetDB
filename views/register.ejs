<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>vetDB</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="text-center mb-5">Vet DB</h1>

    <h2>Register New Pet</h2>
    <form action="register" method="post" class="container-sm">
      <h4 class="mt-3">Pet information:</h4>
      <div>
        <label class="form-label mt-2" for="petName">Pet name:</label>
        <input class="form-control form-control-sm" type="text" name="petName" maxlength="20" required>
      </div>
      <div>
        <label class="form-label mt-2" for="species">Species:</label>
        <input class="form-control form-control-sm" type="text" name="species" list="speciesOptions">
        <datalist id="speciesOptions">
          <option value="Cat">
          <option value="Dog">
          <option value="Bird">
          <option value="Turtle">
          <option value="Fish">
        </datalist>
      </div>
      <div>
        <label class="form-label mt-2" for="breed">Breed:</label>
        <input class="form-control form-control-sm" type="text" name="breed">
      </div>
      <div>
        <label class="form-label mt-2" for="color">Color:</label>
        <input class="form-control form-control-sm" type="text" name="color">
      </div>
      <div>
        <label class="form-label mt-2" for="birth">Birth date:</label>
        <input class="form-control form-control-sm" type="date" name="birth" placeholder="dd-mm-yyyy">
      </div>

      <h4 class="mt-3">Owner information:</h4>
      <div>
        <label class="form-label mt-2" for="ownerName">Owner name:</label>
        <input class="form-control form-control-sm" type="text" name="ownerName" maxlength="30" required>
      </div>
      <div>
        <label class="form-label mt-2" for="phone">Phone number:</label>
        <input class="form-control form-control-sm" type="tel" name="phone" id="phone" placeholder="(00) 00000-0000" required>
      </div>
      <div>
        <label class="form-label mt-2" for="email">Email:</label>
        <input class="form-control form-control-sm" type="email" name="email">
      </div>
      <div>
        <label class="form-label mt-2" for="address">Address:</label>
        <input class="form-control form-control-sm" type="text" name="address" placeholder="Street name, number" maxlength="50" required>
      </div>
      <div>
        <button class="btn btn-secondary mt-3" type="submit">Register</button>
      </div>
    </form>

    <script>
      //código retirado do vídeo "Campos de Telefone com Máscara no WordPress sem usar Plugins" do canal DANTE TESTA
      function mask(o, f) {
        v_obj = o
        v_fun = f
        setTimeout("execmask()", 1)
      }
      function execmask() {
        v_obj.value = v_fun(v_obj.value)
      }
      function masktel(v) {
        v = v.replace(/\D/g, "");
        v = v.replace(/^(\d{2})(\d)/g, "($1) $2");
        v = v.replace(/(\d)(\d{4})$/, "$1-$2");
        return v;
      }
      function idcss(el) {
        return document.getElementById(el);
      }
      window.onload = function () {
        idcss('phone').setAttribute('maxlength', 15)
        idcss('phone').onkeypress = function () {
          mask(this, masktel)
        }
      }
    </script>
  </body>
</html>